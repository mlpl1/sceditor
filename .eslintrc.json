{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "plugin:vue/vue3-recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["vue"],
    "rules": {
        "import/no-absolute-path": ["error"],
        "vue/multi-word-component-names": [
            "error",
            {
                "ignores": ["Welcome", "Dashboard"]
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "alias": {
                "map": [["@", "./resources/js"]],
                "extensions": [".js", ".vue", ".json"]
            }
        }
    }
}
